<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background for the Spinner -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Background color -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <padding android:left="10dp" android:right="50dp"/> <!-- Padding for arrow -->
        </shape>
    </item>

    <!-- Background for the dropdown arrow -->
    <item android:gravity="end|center_vertical">
        <shape android:shape="oval">
            <solid android:color="@android:color/white"/> <!-- Background color of the arrow -->
        </shape>
    </item>

    <!-- The dropdown arrow -->
    <item android:drawable="@drawable/arrow_down_float"
        android:gravity="end|center_vertical"
        android:paddingEnd="10dp"/>
</layer-list>
